APP_NAME=pinglet-demo
APP_ENV=local

# Set address to "0.0.0.0" if you are running from the docker container.
SERVER_ADDR=127.0.0.1
SERVER_PORT=9000

# This option enables errors display and hot code reloading features.
DEBUG=TRUE

LOG_ERRORS=${DEBUG}
LOG_ERROR_DETAILS=${DEBUG}

# By default, it's logging to the console but it can be redirected
# to an arbitrary file, just replace the option by the line:
#LOG_FILE=var/logs/${APP_NAME}.${APP_ENV}.log
LOG_FILE=php://stdout
